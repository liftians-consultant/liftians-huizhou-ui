{
  "name": "liftians-huizhou-ui",
  "version": "0.1.0",
  "author": "Kevin Hong",
  "private": true,
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-is-dev": "^1.0.1",
    "electron-prompt": "^1.2.0",
    "electron-renderer-react-scripts-target": "^1.1.1",
    "history": "^4.7.2",
    "http-proxy-middleware": "^0.19.1",
    "husky": "^1.2.0",
    "i18next": "^12.1.0",
    "jwt-decode": "^2.2.0",
    "lint-staged": "^8.1.0",
    "lodash": "^4.17.11",
    "log4js2": "^1.0.2",
    "moment": "^2.22.2",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-i18next": "^8.3.8",
    "react-redux": "^5.1.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^4.0.8",
    "react-scripts": "2.1.1",
    "react-table": "^6.8.6",
    "react-toastify": "^4.4.3",
    "react-websocket": "^2.0.1",
    "recompose": "^0.30.0",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.83.0",
    "sockjs-client": "1.1.5",
    "uuid": "^3.3.2"
  },
  "devDependencies": {
    "electron": "1.8.7",
    "electron-builder": "20.18.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "foreman": "^3.0.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "redux-devtools-extension": "^2.13.7",
    "wait-on": "^3.2.0"
  },
  "scripts": {
    "start": "nf start -p 3000",
    "react-start": "npm-run-all -p watch-css start-js",
    "electron-start": "node public/electron-wait-react",
    "electron": "electron .",
    "build-css": "node-sass-chokidar src/ -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "cross-env NODE_PATH=src react-scripts start",
    "build-js": "cross-env NODE_PATH=src react-scripts build",
    "build": "npm-run-all build-css build-js",
    "test": "cross-env NODE_PATH=src react-scripts test --env=jsdom",
    "eject": "react-scripts eject",
    "electron-pack": "electron-builder -m -c.extraMetadata.main=build/electron.js",
    "preelectron-pack": "yarn build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "build": {
    "appId": "com.liftians.workstation",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "public"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": "tar.gz"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
